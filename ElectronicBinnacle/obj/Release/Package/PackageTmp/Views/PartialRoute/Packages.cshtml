<article id="partial-body">
    <form id="filter" class="input-control text no-tablet-portrait" data-ng-submit="searchObj()">
        <input type="text" data-ng-model="search.Identifier" data-autofocus="" placeholder="Buscar grupo" />
        <button type="submit" class="btn-search"></button>
    </form>
    <h1>
        <a href="" data-ng-click="goBack()"><i class="icon-arrow-left-3 fg-darker smaller"></i></a>
        Grupos<small class="on-right">{{auth.Employee.Role.Name}}</small>
    </h1>
    <div class="create-new">
        <button id="create-param" class="ribbed-cyan fg-white hover" data-ng-click="create_package()" data-ng-if="hasPermission([22])">
            Crear Grupo de Trabajo
        </button>
    </div>
    <table class="table bordered hovered" style="margin-bottom: 40px;">
        <thead>
            <tr>
                <th class="text-left">Identificador</th>
                <th style="width:150px" data-ng-if="hasPermission([23, 24])">Acción</th>
            </tr>
        </thead>
        <tbody>
            <tr data-ng-repeat="pack in packages ">
                <td class="text-left"><a href="#/package/{{pack.PackageId}}">{{pack.Identifier}}</a></td>
                <td data-ng-if="hasPermission([23, 24])">
                    <a href="" data-ng-click="editPack(pack.PackageId, $index)" data-ng-if="hasPermission([23])" data-ng-disabled="isLoading()">Editar</a> <span data-ng-if="hasPermissionAnd([23, 24])">|</span>
                    <a href="" data-ng-click="remove_pack(pack.PackageId, pack.Identifier, $index)" data-ng-if="hasPermission([24])" data-ng-disabled="isLoading()">Eliminar</a>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="pagination" data-ng-hide="simplePagination.last <= 1">
        <ul>
            <li><a data-ng-click="goPage(simplePagination, 0)" href=""><i class="icon-first-2"></i></a></li>
            <li><a data-ng-click="goPage(simplePagination, simplePagination.currentIndex - 1)" href=""><i class="icon-previous"></i></a></li>
            <li data-ng-class="{active : $index == simplePagination.currentIndex}" data-ng-show="simplePagination.low <= $index && $index <= simplePagination.top" data-ng-repeat="index in simplePagination.pagination">
                <a href="" data-ng-click="goPage(simplePagination, $index)">{{$index+1}}</a>
            </li>
            <li><a data-ng-click="goPage(simplePagination, simplePagination.currentIndex + 1)" href=""><i class="icon-next"></i></a></li>
            <li><a href="" data-ng-click="goPage(simplePagination, simplePagination.last-1)"><i class="icon-last-2"></i></a></li>
        </ul>
    </div>
</article>
